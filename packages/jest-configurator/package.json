{
  "name": "@times-components/jest-configurator",
  "version": "0.2.1",
  "description": "Cross platform Jest Config",
  "main": "lib/jest-configurator.js",
  "scripts": {
    "build": "babel src -d lib",
    "prepublishOnly": "yarn build",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "fmt": "prettier --write '**/*.*'",
    "lint": "flow && eslint . && yarn prettier:diff",
    "pretest": "./setup.sh",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "link",
    "component",
    "jest",
    "eslint"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "coverageDirectory": "<rootDir>/packages/jest-configurator/coverage",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/jest-configurator/__tests__/*.test.js"
    ]
  },
  "dependencies": {
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.0",
    "enzyme-to-json": "3.3.0",
    "find-node-modules": "1.0.4",
    "jest-plugin-context": "2.6.0",
    "recursive-readdir-synchronous": "0.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.40",
    "@times-components/eslint-config-thetimes": "0.1.3",
    "babel-cli": "7.0.0-beta.3",
    "babel-core": "7.0.0-beta.3",
    "babel-jest": "22.4.1",
    "babel-plugin-transform-es2015-modules-commonjs": "7.0.0-beta.3",
    "babel-plugin-transform-object-rest-spread": "7.0.0-beta.3",
    "babel-preset-flow": "7.0.0-beta.3",
    "eslint": "4.9.0",
    "flow-bin": "0.63.1",
    "jest": "21.2.1",
    "prettier": "1.8.2"
  },
  "peerDependencies": {
    "babel-preset-env": "7.0.0-beta.3",
    "babel-preset-stage-2": "7.0.0-beta.3",
    "react-native-web": ">=0.3"
  },
  "resolutions": {
    "minimatch": "3.0.4"
  }
}
